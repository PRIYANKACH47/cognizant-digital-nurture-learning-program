// Store event details
const eventName = "Community Cleanup";
const eventDate = "2025-06-15";
let availableSeats = 50;

// Concatenate event info using template literals
const eventInfo = `Event: ${eventName}, Date: ${eventDate}, Seats Available: ${availableSeats}`;
console.log(eventInfo);

// Simulate a user registering: decrement available seats
availableSeats--;
console.log(`After one registration, seats left: ${availableSeats}`);

// Simulate a cancellation: increment available seats
availableSeats++;
console.log(`After one cancellation, seats left: ${availableSeats}`);
